{
  "compilerOptions": {
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo",
    "rootDir": "src",
    "outDir": "lib",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "sample"]
}
